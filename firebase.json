{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "source": "!/__auth/**",
        "destination": "/index.html"
      },
      {
        "source": "/__/auth/**",
        "dynamicLinks": true
      }
    ]
  }
}